{
  "name": "AetosWMS-Backend",
  "runtime": "java:17",
  "build": {
    "type": "maven",
    "goal": "package",
    "args": "-DskipTests"
  },
  "deploy": {
    "type": "jar",
    "jar": "target/backend-0.0.1-SNAPSHOT.jar",
    "startupCommand": "java -jar backend-0.0.1-SNAPSHOT.jar --spring.profiles.active=production"
  },
  "environment": {
    "SPRING_PROFILES_ACTIVE": "production",
    "PORT": "8080",
    "JAVA_OPTS": "-Xms512m -Xmx1g -XX:+UseG1GC"
  }
}

